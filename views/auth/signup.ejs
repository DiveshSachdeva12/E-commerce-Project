<% layout('layouts/boilerplate') %>

  <style>
    body {
        font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #007bff;
    }
    .div1 {
      height: auto;
      width: 500px;
      background-color: white;
      margin: 10px auto;
      border: 1px solid rgb(133, 130, 130);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      border-radius: 8px;
      padding: 20px;
    }
    .div1 h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    .form-group {
      margin-bottom: 15px;
    }
    .form-group label {
      display: block;
      margin-bottom: 5px;
    }
    .form-group input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      border: none;
      outline: none;
      border-bottom: 1px solid green;
    }
    .signup-btn {
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
    .signup-btn:hover {
      background-color: #0056b3;
    }
  </style>
  <div class="div1">
    <h2>Signup</h2>
    <form action="/register" method="POST">
      <div class="form-group">
        <label for="username">Username :</label>
        <input type="text" id="username" name="username" placeholder="Enter your username" required>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required>
      </div>
      <div class="mb-3">
        <p class="mb-2">Want to register as ? </p>
        <div class="mx-2">
          <label for="buyer" class="form-label">Buyer:</label>
          <input type="radio" name="role" id="buyer" class="form-check-input" value="buyer">
        </div>
        <div class="mx-2">
          <label for="Seller" class="form-label">Seller:</label>
          <input type="radio" name="role" id="Seller" class="form-check-input" value="Seller">
        </div> 
      </div>

      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required>
      </div>
      <button type="submit" class="signup-btn">Signup</button>
      <p>Already have an account ? <a href="/login">login</a> </p>

    </form>
  </div>



</body>
</html>
